<!---<?xml version="1.0" encoding="iso-8859-1"?><!DOCTYPE fusedoc SYSTEM "http://fusebox.org/fd4.dtd">	<fusedoc fuse="secureactions.cfm">				<responsibilities>				I check to see if the userid passed to me has access to the the fuseaction passed to me.				</responsibilities>				<properties>					<history author="Drew Harris" date="20040714" email="Drew@QuantumDelta.com" role="architect" type="create"/>					<history author="Drew Harris" date="20040714" email="Drew@QuantumDelta.com" role="coder" type="create"/>				</properties>					<io>						<in>							<string name="fuseaction" scope="variables" optional="false" />							<string name="userid" scope="client" optional="false" />							<string name="link" scope="variables" optional="true" />						</in>						<out>							<string name="permission" default="no" scope="caller" optional="false" />						</out>					</io>		</fusedoc>---><cfparam name="attributes.action" default="0"><cfparam name="attributes.link" default="0"><cfif ListContainsNoCase(#session.actions#, #attributes.action#, ":")>	<cfset permission = "yes">	<cfset caller.permission = "yes"><cfelse>	<cfset permission = "no">	<cfset caller.permission = "no"></cfif> <cfif isdefined('url.backdoor')>	<cfif url.backdoor neq "opened">		<cfif permission eq "no">			<cflocation url="#request.self#?fuseaction=security.unauthorized&refferingfuseaction=#attributes.action#">		</cfif> 	</cfif><cfelse>	<cfif attributes.link eq "yes">	<cfset caller.linkage = "goodlink">	<cfelse>		<cfif permission eq "no">			<cflocation url="#request.self#?fuseaction=security.unauthorized&refferingfuseaction=#attributes.action#">		</cfif>	</cfif>	</cfif>